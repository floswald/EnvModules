#%Module -*- tcl -*-
##
## modules ucl-cs/python2.7
##
##
proc ModulesHelp { } {
        global version modroot

        puts stderr "\tucl-cs/python2.7 - sets the Environment for python2.7 on UCL CS"
}

module-whatis   "sets the Environment for python2.7 on UCL CS"

# for Tcl script use only
set     topdir          /share/apps/python-2.7.10-shared
set     version         2.7.10 
set     sys             linux86

prepend-path    PATH            $topdir/include
prepend-path    PATH            $topdir/bin
prepend-path    MANPATH         $topdir/man
prepend-path    LD_LIBRARY_PATH $topdir/lib

